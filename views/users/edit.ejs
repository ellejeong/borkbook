<%- include("../partials/header") %>

<div class="row justify-content-center">
  <div class="col-md-12 text-center">
    <h1 class="h1 mb-3 font-weight-normal">Edit <%= user.username %>'s info</h1>
  </div>

  <div class="col-xs-12 col-md-6 col-lg-4">
    <form
      action="/users/<%= user._id %>?_method=PUT"
      method="POST"
      enctype="multipart/form-data"
    >
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="firstName"
          value="<%= user.firstName %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="text"
          name="lastName"
          value="<%= user.lastName %>"
        />
      </div>
      <div class="form-group">
        <input
          class="form-control"
          type="email"
          name="email"
          value="<%= user.email %>"
        />
      </div>
      <div class="form-group">
        <h1 class="h6 mb-0 font-weight-normal">Upload New Avatar Image</h1>
        <label for="inputAvatar" class="sr-only">Avatar</label>
        <input type="file" id="inputAvatar" name="avatar" accept="image/*" />
      </div>
      <div class="form-group">
        <button class="btn btn-lg btn-secondary btn-block">Update</button>
      </div>
    </form>
    <a href="/users/<%= user._id %>">Go Back</a>
  </div>
</div>

<%- include("../partials/footer") %>
